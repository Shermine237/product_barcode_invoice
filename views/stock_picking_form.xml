<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_form_barcode" model="ir.ui.view">
        <field name="name">stock.picking.form.barcode</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- Add barcode field in the 'Operations' tab lines -->
            <xpath expr="//field[@name='move_line_ids_without_package']/tree/field[@name='product_id']" position="after">
                <field name="product_barcode"/>
            </xpath>
        </field>
    </record>
</odoo>
