<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_deliveryslip_barcode" inherit_id="stock.report_delivery_document">
        <!-- Add Barcode column header into the header row (robust selector) -->
        <xpath expr="//table[contains(@class,'o_line_table')]/thead/tr" position="inside">
            <th name="th_sm_barcode" class="text-start"><strong>Barcode</strong></th>
        </xpath>

        <!-- Add Barcode value cell into each body row -->
        <xpath expr="//table[contains(@class,'o_line_table')]/tbody/tr" position="inside">
            <td>
                <span t-field="move.product_id.barcode"/>
            </td>
        </xpath>
    </template>
</odoo>
