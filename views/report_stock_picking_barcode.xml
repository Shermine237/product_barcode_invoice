<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_deliveryslip_barcode" inherit_id="stock.report_delivery_document">
        <!-- Add Barcode column header after the Product column -->
        <xpath expr="//table[contains(@class,'o_line_table')]/thead/tr/th[1]" position="after">
            <th name="th_sm_barcode" class="text-start"><strong>Barcode</strong></th>
        </xpath>

        <!-- Add Barcode value cell after the Product cell for each line -->
        <xpath expr="//table[contains(@class,'o_line_table')]/tbody/tr/td[1]" position="after">
            <td>
                <span t-field="line.product_id.barcode"/>
            </td>
        </xpath>
    </template>
</odoo>
