<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_deliveryslip_barcode" inherit_id="stock.report_delivery_document">
        <!-- Add Barcode column header after the Product column -->
        <xpath expr="//table[hasclass('o_line_table')]/thead/tr/th[@name='th_sm_product']" position="after">
            <th name="th_sm_barcode" class="text-start"><strong>Barcode</strong></th>
        </xpath>

        <!-- Add Barcode value cell after the Product cell for each line -->
        <xpath expr="//table[hasclass('o_line_table')]/tbody//td[hasclass('td-product_name')]" position="after">
            <td>
                <span t-field="move.product_id.barcode"/>
            </td>
        </xpath>
    </template>
</odoo>
