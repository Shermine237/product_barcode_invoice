<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_deliveryslip_barcode" inherit_id="stock.report_delivery_document">
        <!-- Add Barcode column header before the last column -->
        <xpath expr="//table[contains(@class,'o_line_table')]/thead/tr/th[last()]" position="before">
            <th name="th_sm_barcode" class="text-start"><strong>Barcode</strong></th>
        </xpath>

        <!-- Add Barcode value cell before the last column for each line -->
        <xpath expr="//table[contains(@class,'o_line_table')]/tbody/tr/td[last()]" position="before">
            <td>
                <span t-field="move.product_id.barcode"/>
            </td>
        </xpath>
    </template>
</odoo>
