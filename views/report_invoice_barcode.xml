<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_document_barcode" inherit_id="account.report_invoice_document">
        <xpath expr="//thead/tr/th[hasclass('product')]"
               position="before">
            <th>Code-barres</th>
        </xpath>

        <xpath expr="//tbody/tr/td[hasclass('product')]"
               position="before">
            <td>
                <span t-esc="line.product_id.barcode or ''"/>
            </td>
        </xpath>
    </template>
</odoo>
