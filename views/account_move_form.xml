<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_form_add_product_barcode" model="ir.ui.view">
        <field name="name">account.move.form.add.product.barcode</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Ajout colonne "Code-barres" dans les lignes de facture -->
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="before">
                <field name="product_barcode" readonly="1" optional="show"/>
            </xpath>

            <!-- Ajout dans la vue mobile (formulaire ligne individuelle) -->
            <xpath expr="//field[@name='invoice_line_ids']/form//field[@name='product_id']" position="after">
                <field name="product_barcode" readonly="1"/>
            </xpath>

            <!-- Ajout dans la carte Kanban mobile -->
            <xpath expr="//field[@name='invoice_line_ids']/kanban/templates/t/div/div[hasclass('o_kanban_record_body')]/div[1]" position="after">
                <div class="text-muted">
                    <span>Code-barres: <field name="product_barcode"/></span>
                </div>
            </xpath>

        </field>
    </record>
</odoo>
